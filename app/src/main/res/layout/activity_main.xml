<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- システム名表示（左上） -->
    <TextView
        android:id="@+id/systemNameText"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:text="J.A.R.V.I.S"
        android:textColor="#E1BEE7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 設定ボタン（右上） -->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingsButtonCard"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1A7B1FA2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/settings_button_background"
            android:text="⚙"
            android:textColor="#E1BEE7"
            android:textSize="24sp"
            android:textStyle="bold"
            android:stateListAnimator="@null" />

    </androidx.cardview.widget.CardView>

    <!-- 中央の円形ボタン -->
    <androidx.cardview.widget.CardView
        android:id="@+id/toggleButtonCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#1A000000"
        app:layout_constraintTop_toBottomOf="@+id/systemNameText"
        app:layout_constraintBottom_toTopOf="@+id/messageInputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/circular_gradient">

            <Button
                android:id="@+id/toggleButton"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/circular_button"
                android:text="ACTIVATE"
                android:textColor="#E1BEE7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:elevation="8dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ステータステキスト -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SYSTEM READY"
        android:textColor="#CE93D8"
        android:textSize="14sp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- メッセージ入力エリア -->
    <androidx.cardview.widget.CardView
        android:id="@+id/messageInputCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1A7B1FA2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/sendText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Enter message..."
                android:textColorHint="#80CE93D8"
                android:textColor="#E1BEE7"
                android:padding="16dp"
                android:textSize="16sp"
                android:inputType="text"
                android:fontFamily="sans-serif-light" />

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#7B1FA2">

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/send_button_background"
                    android:text="→"
                    android:textColor="#E1BEE7"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 装飾的なライン（左） -->
    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/vertical_gradient_line"
        app:layout_constraintTop_toBottomOf="@+id/systemNameText"
        app:layout_constraintBottom_toTopOf="@+id/messageInputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1" />

    <!-- 装飾的なライン（右） -->
    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/vertical_gradient_line"
        app:layout_constraintTop_toBottomOf="@+id/settingsButtonCard"
        app:layout_constraintBottom_toTopOf="@+id/messageInputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>